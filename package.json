{
  "name": "hydravion-smart-tv",
  "version": "0.1.0",
  "description": "Hydravion for LG/Samsung TVs",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "lint": "eslint '**/*.js'",
    "lint:fix": "eslint '**/*.js' --fix",
    "build-webos": "env VITE_PLATFORM=webos vite build && ares-package -o dist/webos dist/webos/app dist/webos/service",
    "build-tizen": "env VITE_PLATFORM=tizen vite build && tizen build-web -- dist/tizen/app",
    "dev": "vite dev --host",
    "postinstall": "husky"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.11.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "shaka-player": "^4.14.7",
    "vite": "^5.4.18",
    "vite-plugin-static-copy": "^2.3.1"
  },
  "dependencies": {
    "@lightningjs/blits": "^1.27.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  }
}
